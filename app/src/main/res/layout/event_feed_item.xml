<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="6dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/event_cover_img"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:adjustViewBounds="true"
            app:srcCompat="@drawable/cover_ex" />

        <TextView
            android:id="@+id/event_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/event_cover_img"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:text="Droid Up 4.0"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/event_organizer_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/event_title"
            android:layout_margin="5dp"
            android:text="Geolab"
            android:textSize="16sp" />

        <ge.edu.geolab.gevents.ui.widgets.DateView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/event_date_view"
            android:layout_below="@+id/event_cover_img"
            android:layout_alignParentRight="true"
            android:layout_margin="5dp"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>